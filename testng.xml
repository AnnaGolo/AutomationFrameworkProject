<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="DemoSuiteMax"
       verbose="2"
       parallel="tests"
       thread-count="6"
       preserve-order="true">

<parameter name="baseUrl" value="https://www.saucedemo.com"/>
<parameter name="env" value="qa"/>
<parameter name="headless" value="false"/>

<listeners>
    <listener class-name="listeners.BuiltInReportListener"/>
</listeners>

<test name="Smoke Tests (by groups)">
    <parameter name="browser" value="chrome"/>
    <groups>
        <run>
            <include name="smoke"/>
        </run>
    </groups>
    <packages>
        <package name="tests"/>
    </packages>
</test>
<test name="Regression Tests (by groups)">
    <parameter name="browser" value="firefox"/>
    <groups>
        <run>
            <include name="regression"/>
        </run>
    </groups>
    <packages>
        <package name="tests"/>
    </packages>
</test>
<test name="Negative Tests (explicit classes)">
    <parameter name="browser" value="edge"/>
    <classes>
        <class name="tests.CheckoutPageNegativeTest"/>
    </classes>
</test>
<test name="Regression Chrome">
    <parameter name="browser" value="chrome"/>
    <classes>
        <class name="tests.InventoryPageTest"/>
        <class name="tests.BackPackProductPageTest"/>
        <class name="tests.CartPageTest"/>
        <class name="tests.CheckoutPageTest"/>
    </classes>
</test>

<test name="Regression Firefox">
    <parameter name="browser" value="firefox"/>
    <classes>
        <class name="tests.InventoryPageTest"/>
        <class name="tests.BackPackProductPageTest"/>
        <class name="tests.CartPageTest"/>
        <class name="tests.CheckoutPageTest"/>
    </classes>
</test>

</suite>
